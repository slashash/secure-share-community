        "options": {
          "rules": {
            "core:required": {
              "param": ""
            }
          }
        },
        "name": "email"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "trycatch",
      "options": {
        "try": {
          "steps": [
            {
              "name": "qCheck",
              "module": "dbconnector",
              "action": "single",
              "options": {
                "connection": "db",
                "sql": {
                  "type": "SELECT",
                  "columns": [
                    {
                      "table": "U",
                      "column": "user_id"
                    },
                    {
                      "table": "U",
                      "column": "first_name"
                    },
                    {
                      "table": "U",
                      "column": "last_name"
                    },
                    {
                      "table": "U",
                      "column": "email_id"
                    }
                  ],
                  "table": {
                    "name": "m_user",
                    "schema": "app",
                    "alias": "U"
                  },
                  "primary": "user_id",
                  "joins": [],
                  "wheres": {
                    "condition": "AND",
                    "rules": [
                      {
                        "id": "U.email_id",
                        "field": "U.email_id",
                        "type": "string",
                        "operator": "equal",
                        "value": "{{$_POST.email}}",
                        "data": {
                          "table": "U",
                          "column": "email_id",
                          "type": "text",
                          "columnObj": {
                            "type": "string",
                            "maxLength": 200,
                            "primary": false,
                            "unique": true,
                            "nullable": false,
                            "name": "email_id"
                          }
                        },
                        "operation": "="
                      },
                      {
                        "id": "U.login_disabled_on",
                        "field": "U.login_disabled_on",
                        "type": "datetime",
                        "operator": "is_null",
                        "value": null,
                        "data": {
                          "table": "U",
                          "column": "login_disabled_on",
                          "type": "datetime",
                          "columnObj": {
                            "type": "timestamp",
                            "primary": false,
                            "unique": false,
                            "nullable": true,
                            "name": "login_disabled_on"
                          }
                        },
                        "operation": "IS NULL"
                      }
                    ],
                    "conditional": null,
                    "valid": true
                  },
                  "query": "select \"user_id\", \"first_name\", \"last_name\", \"email_id\" from \"app\".\"m_user\" as \"U\" where \"U\".\"email_id\" = ? and \"U\".\"login_disabled_on\" is null",
                  "params": [
                    {
                      "operator": "equal",
                      "type": "expression",
                      "name": ":P1",
                      "value": "{{$_POST.email}}",
                      "test": ""
                    }
                  ]
                }
              },
              "meta": [
                {
                  "type": "text",
                  "name": "user_id"
                },
                {
                  "type": "text",
                  "name": "first_name"
                },
                {
                  "type": "text",
                  "name": "last_name"
                },
                {
                  "type": "text",
                  "name": "email_id"
                }
              ],
              "outputType": "object",
              "type": "dbconnector_single",
              "output": false
            },
            {
              "name": "",
              "module": "core",
              "action": "condition",
              "options": {
                "if": "{{qCheck.user_id}}",
                "then": {
                  "steps": [
                    {
                      "name": "varToken",
                      "module": "core",
                      "action": "setvalue",
                      "options": {
                        "key": "varToken",
                        "value": "{{UUID}}"
                      },
                      "meta": [],
                      "outputType": "text"
                    },
                    {
                      "name": "uResetToken",
                      "module": "dbupdater",
                      "action": "update",
                      "options": {
                        "connection": "db",
                        "sql": {
                          "type": "update",
                          "values": [
                            {
                              "table": "m_user",
                              "column": "pass_reset_token",
                              "type": "text",
                              "value": "{{varToken}}",
                              "recid": 1
                            },
                            {
                              "table": "m_user",
                              "column": "pass_reset_token_expiry",
                              "type": "datetime",
                              "value": "{{NOW_UTC.dateAdd('hours', 24)}}",
                              "recid": 2
                            }
                          ],
                          "table": "app.m_user",
                          "wheres": {
                            "condition": "AND",
                            "rules": [
                              {
                                "id": "email_id",
                                "field": "email_id",
                                "type": "string",
                                "operator": "equal",
                                "value": "{{$_POST.email.trim().lowercase()}}",
                                "data": {
                                  "column": "email_id"
                                },
                                "operation": "="
                              }
                            ],
                            "conditional": null,
                            "valid": true
                          },
                          "returning": "user_id",
                          "query": "update \"app\".\"m_user\" set \"pass_reset_token\" = ?, \"pass_reset_token_expiry\" = ? where \"email_id\" = ? returning \"user_id\"",
                          "params": [
                            {
                              "name": ":P1",
                              "type": "expression",
                              "value": "{{varToken}}",
                              "test": ""
                            },
                            {
                              "name": ":P2",
                              "type": "expression",
                              "value": "{{NOW_UTC.dateAdd('hours', 24)}}",
                              "test": ""
                            },
                            {
                              "operator": "equal",
                              "type": "expression",
                              "name": ":P3",
                              "value": "{{$_POST.email.trim().lowercase()}}",
                              "test": ""
                            }
                          ]
                        }
                      },
                      "meta": [
                        {
                          "name": "affected",
                          "type": "number"
                        }
                      ],
                      "output": false
                    },
                    {
                      "name": "",
                      "module": "mail",
                      "action": "send",
                      "options": {
                        "instance": "mail",
                        "subject": "Forgot Password? ðŸ˜•",
                        "fromName": "Secure Share",
                        "fromEmail": "{{$_ENV.SMTP_SENDER_EMAIL}}",
                        "replyTo": "{{$_ENV.REPLY_TO_EMAIL}}",
                        "toName": "{{qCheck.first_name.titlecase()+' '+qCheck.last_name.titlecase()}}",
                        "toEmail": "{{qCheck.email_id}}",
                        "recipientType": "extended",
                        "contentType": "html",
                        "source": "file",
                        "bodyFile": "/templates/forgot-password.html"
                      }
                    }
                  ]
                }
              },
              "outputType": "boolean"
            },
            {
              "name": "xLog",
              "module": "SALog",
              "action": "CreateLog",
              "options": {
                "connection": "db",
                "logMode": true,
                "inputParams": "{{$_POST}}",
                "outputParams": "",
                "serverActionName": "{{$_SERVER.PATH_INFO}}",
                "requestURL": "{{$_SERVER.BASE_URL}}",
                "errors": "",
                "startedOn": "{{varStartTime}}",
                "completedOn": "{{NOW_UTC}}",
                "remarks": "",
                "sessionGUID": "{{varSessionGUID}}",
                "userIdentity": "{{identity}}"
              },
              "meta": [
                {
                  "name": "log",
                  "type": "array"
                }
              ]
            }
          ]
        },
        "catch": {
          "steps": {
            "name": "xLogErr",
            "module": "SALog",
            "action": "CreateLog",
            "options": {
              "connection": "db",
              "logMode": true,
              "inputParams": "{{$_POST}}",
              "outputParams": "",
              "serverActionName": "{{$_SERVER.PATH_INFO}}",
              "requestURL": "{{$_SERVER.BASE_URL}}",
              "errors": "{{$_ERROR}}",
